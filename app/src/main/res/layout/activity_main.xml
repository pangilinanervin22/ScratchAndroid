<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/casino"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diceContain"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:text="wew"
        android:textColor="#FFC107"

        android:textSize="60dp" />

    <ImageView
        android:id="@+id/logoCasino"
        android:layout_width="350dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wew" />

    <Button
        android:id="@+id/startBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/diceContain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/restart"

        />


    <LinearLayout
        android:id="@+id/diceContain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoCasino"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/firstDice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:src="@drawable/dice" />

        <ImageView
            android:id="@+id/SecondDice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dice" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/startBtn"
        android:src="@drawable/rain"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diceContain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="100dp"
            android:text="@string/button1"
            android:background="@drawable/buttonradius"/>

        <Button
            android:id="@+id/player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button2"
            android:background="@drawable/buttonradius"/>

    </LinearLayout>


</RelativeLayout>